package in.arunIt.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

import in.arunIt.binding.Passenger;
import in.arunIt.binding.Ticket;
import in.arunIt.service.TicketService;
import in.arunIt.service.TicketServiceImpl;

public class TicketController {
	
	@Autowired
	private TicketServiceImpl ticketService;
	
	@PostMapping(value="/ticket",
			consumes="application/json",
			produces="application/json")
	public ResponseEntity<Ticket> bookTicket(@RequestBody Passenger passenger) {
	Ticket ticket=ticketService.bookTicket(passenger);
	return new ResponseEntity<>(ticket,HttpStatus.CREATED);
	
	}
	
	@GetMapping(
			
			value="/ticket/{tid}",
			produces="application/json")
	public ResponseEntity<Ticket> getTicket(@PathVariable("tid") Integer tid){
		Ticket ticket = ticketService.getTicket(tid);
		return new ResponseEntity<>(ticket,HttpStatus.OK);
		
	}
	
	@GetMapping(value="/tickets",
			produces="application/json")
	public ResponseEntity<List<Ticket>> getAllTickets(){
		List<Ticket> tickets = ticketService.getAllTickets();
		return new ResponseEntity<> (tickets,HttpStatus.OK);
		
	}
	
	
	
	
}
